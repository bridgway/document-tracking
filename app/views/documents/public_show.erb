<div id='document' class='public'>

  <header>
    <h1><%= @doc.filename %></h1>
    <p class='subtle'>Sign this document and we'll get going.</p>

    <ul class='bare' id='toolbar'>
      <li><a class='action' href="<%= @doc.file.source.url %>">Download a copy of the document</a></li>
    </ul>

  </header>

  <div id='the-document'>
    <embed src="/test.pdf" width="800" height="575">
  </div>

  <section id='blotter'>
    <h2>Sign It</h2>
  </section>

  <section id='discussion'>

    <form id='add-comment'>
      <p><strong>Add A Comment</strong></p>
      <textarea></textarea>
      <button>Add Comment</button>
    </form>
  </section>
</div>