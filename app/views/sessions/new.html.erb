<%= title "Briefcase > Log In" %>

<h2>Login</h2>


<div id='login'>
  <%= form_tag login_path, :method => :post do %>

    <div class='block'>
      <%= label_tag "Email" %>
      <%= text_field_tag :email %>
    </div>

    <div class='block'>
      <%= label_tag "Password" %>
      <%= password_field_tag :password %>
    </div>


    <%= button_tag :submit %>
  <% end %>
</div>